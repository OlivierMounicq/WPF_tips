<Window x:Class="YourApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:local="clr-namespace:YourApp"
Title="Grid Background Binding (MVVM)" Height="300" Width="400">

```
<Window.DataContext>
    <local:MainViewModel/>
</Window.DataContext>

<StackPanel Margin="20">
    <Label Content="Enter a color (e.g., Red, Blue, #FF0000):"/>
    
    <!-- TextBox bound to ViewModel -->
    <TextBox Text="{Binding ColorText, UpdateSourceTrigger=PropertyChanged}" 
             Margin="0,5,0,10"/>
    
    <!-- Grid with bound background from ViewModel -->
    <Grid Height="150" 
          Background="{Binding GridBackground}">
        <TextBlock Text="This grid's background is controlled by the ViewModel!" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="14"
                   TextWrapping="Wrap"
                   TextAlignment="Center"/>
    </Grid>
    
    <TextBlock Text="Try entering: Red, Blue, Green, #FF5733, #80FF0000" 
               Margin="0,10,0,0" 
               FontStyle="Italic" 
               Foreground="Gray"/>
</StackPanel>
```

</Window>