<Window x:Class="YourApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:local="clr-namespace:YourApp"
Title="Grid Background Binding" Height="300" Width="400">

```
<Window.Resources>
    <!-- Register the converter -->
    <local:TextToBrushConverter x:Key="TextToBrushConverter"/>
</Window.Resources>

<StackPanel Margin="20">
    <Label Content="Enter a color (e.g., Red, Blue, #FF0000, #FFFF0000):"/>
    
    <!-- TextBox for color input -->
    <TextBox x:Name="ColorTextBox" 
             Text="LightBlue" 
             Margin="0,5,0,10"/>
    
    <!-- Grid with bound background -->
    <Grid Height="150" 
          Background="{Binding ElementName=ColorTextBox, 
                             Path=Text, 
                             Converter={StaticResource TextToBrushConverter}}">
        <TextBlock Text="This grid's background changes with the textbox!" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="14"
                   TextWrapping="Wrap"
                   TextAlignment="Center"/>
    </Grid>
    
    <TextBlock Text="Try entering: Red, Blue, Green, #FF5733, #80FF0000" 
               Margin="0,10,0,0" 
               FontStyle="Italic" 
               Foreground="Gray"/>
</StackPanel>
```

