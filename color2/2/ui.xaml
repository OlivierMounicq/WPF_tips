<Window x:Class="YourApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:local="clr-namespace:YourApp"
Title="Grid Background Binding with Match (MVVM)" Height="400" Width="450">

```
<Window.DataContext>
    <local:MainViewModel/>
</Window.DataContext>

<StackPanel Margin="20">
    <Label Content="Enter a color in the first textbox:"/>
    
    <!-- First TextBox bound to ViewModel -->
    <TextBox Text="{Binding ColorText, UpdateSourceTrigger=PropertyChanged}" 
             Margin="0,5,0,10"/>
    
    <!-- Grid with bound background from ViewModel -->
    <Grid Height="150" 
          Background="{Binding GridBackground}"
          Margin="0,0,0,15">
        
        <!-- Second TextBox inside the Grid, bound to ViewModel -->
        <TextBox Text="{Binding MatchText, UpdateSourceTrigger=PropertyChanged}"
                 Width="200" 
                 Height="30"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 FontSize="14"/>
    </Grid>
    
    <StackPanel>
        <TextBlock Text="Instructions:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Text="• Enter a color name or hex code in the first textbox" 
                   Margin="0,2"/>
        <TextBlock Text="• Type the same value in the textbox inside the grid" 
                   Margin="0,2"/>
        <TextBlock Text="• When values match: Grid shows the specified color" 
                   Margin="0,2"/>
        <TextBlock Text="• When values don't match: Grid shows light coral (red)" 
                   Margin="0,2"/>
        <TextBlock Text="• Try: Red, Blue, Green, #FF5733, #80FF0000" 
                   Margin="0,5,0,0" 
                   FontStyle="Italic" 
                   Foreground="Gray"/>
    </StackPanel>
</StackPanel>
```

</Window>